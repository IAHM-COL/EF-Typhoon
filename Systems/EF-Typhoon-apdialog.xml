<?xml version="1.0" encoding="utf-8"?>

<PropertyList>
  <name>ap-dialog</name>
  <modal>false</modal>
  <draggable>true</draggable>
  <layout>vbox</layout>
  <width>360</width>
  <x>50</x>
  <y>-50</y>

  <text>
    <height>20</height>
    <halign>center</halign>
    <label>Autopilot Control</label>
  </text>  
  
  <frame> <!-- Lateral Modes -->
    <layout>hbox</layout>
    
    <group> <!-- Heading Bug -->
      <padding>10</padding>
      <layout>vbox</layout>
      <halign>left</halign>
      <x>0</x>
      <y>0</y>
      
      <input>
	<row>0</row>
	<col>5</col>
	<rowspan>2</rowspan>
	<property>/autopilot/settings/heading-bug-deg</property>
	<live>true</live>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </input>
      
      <button>
	<x>0</x>
	<y>0</y>
	<legend>HDG</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/heading</property>
	  <value type="string">dg-heading-hold</value>
	  <value/>
	</binding>
      </button>
      
      <button>
	<x>0</x>
	<y>0</y>
	<legend>TACAN</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/heading</property>
	  <value type="string">tacan-hold</value>
	  <value/>
	</binding>
      </button>
      
    </group>

    <group> <!-- Track -->
      <padding>10</padding>
      <layout>vbox</layout>
      <halign>left</halign>
      <x>-50</x>
      <y>0</y>
      
      <text>
	<halign>center</halign>
	<label>-99.99</label> <!-- placeholder for width -->
	<property>autopilot/settings/target-roll-deg</property>
	<live>true</live>
      </text>
      
      <slider>
	<vertical>false</vertical>
	<x>0</x>
	<y>0</y>
	<width>70</width>
	<property>/autopilot/settings/target-roll-deg</property>
	<live>true</live>
	<binding>
	  <command>dialog-apply</command>
	</binding>
	<min>-90</min>
	<max>90</max>
	<step>1.0</step>
      </slider>
      
      <button>
	<x>0</x>
	<y>0</y>
	<legend>Roll Hold</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/heading</property>
	  <value>roll-hold</value>
	  <value/>
	</binding>
      </button>
      
    </group>
    
    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      <halign>left</halign>
      <x>0</x>
      <y>0</y>
      
      <input>
	<row>0</row>
	<col>5</col>
	<rowspan>2</rowspan>
	<property>/autopilot/settings/true-heading-deg</property>
	<live>true</live>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </input>  
      
      <button>
	<x>0</x>
	<y>0</y>
	<legend>TRK/GAL</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/heading</property>
	  <value type="string">true-heading-hold</value>
	  <value/>
	</binding>
      </button>
      
      <button>
	<x>0</x>
	<y>0</y>
	<legend>NAV1</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/heading</property>
	  <value type="string">nav-hold</value>
	  <value/>
	</binding>
      </button>
      
    </group>
    
  </frame>
  
  <frame> <!-- Vertical Modes -->
    <layout>hbox</layout>
    
    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      <halign>center</halign>
      <width>70</width>
      <x>0</x>
      <y>0</y>
      
      <input>
	<property>/autopilot/settings/ind-target-altitude-ft</property>
	<live>true</live>
	<width>70</width>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </input>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>100</width>
	<legend>ALT Hold</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/altitude</property>
	  <value type="string">altitude-hold</value>
	  <value/>
	</binding>
      </button>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>100</width>
	<legend>GS Arm</legend>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </button>
      
    </group>
    
    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      <halign>center</halign>
      <width>70</width>
      <x>0</x>
      <y>0</y>
      
      <text>
	<halign>center</halign>
	<label>-99.99</label> <!-- placeholder for width -->
	<property>autopilot/settings/target-pitch-deg</property>
	<live>true</live>
      </text>
      
      <slider>
	<vertical>true</vertical>
	<x>0</x>
	<y>0</y>
	<height>80</height>
	<width>70</width>
	<property>/autopilot/settings/target-pitch-deg</property>
	<live>true</live>
	<binding>
	  <command>dialog-apply</command>
	</binding>
	<min>-70</min>
	<max>70</max>
	<step>5.0</step>
      </slider>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>100</width>
	<legend>Pitch Hold</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/altitude</property>
	  <value type="string">pitch-hold</value>
	  <value/>
	</binding>
      </button>
      
    </group>


    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      <halign>center</halign>
      <width>70</width>
      <x>0</x>
      <y>0</y>
      
      <input>
	<property>/autopilot/settings/target-agl-ft</property>
	<live>true</live>
	<width>70</width>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </input>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>100</width>
	<legend>TFR Hold</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/altitude</property>
	  <value type="string">agl-hold</value>
	  <value/>
	</binding>
      </button>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>100</width>
	<legend>VNAV</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/altitude</property>
	  <value type="string">nav-hold</value>
	  <value/>
	</binding>
      </button>
      
    </group>
    
  </frame>
  
  <frame> <!-- Speed Modes -->
    <layout>hbox</layout>
    
    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      <x>0</x>
      <y>0</y>
      
      <input>
	<property>/autopilot/settings/target-speed-kt</property>
	<live>true</live>
	<width>70</width>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </input>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>70</width>
	<legend>KTS</legend>
	<binding>
	  <command>nasal</command>
	  <script>autopilot.ATselKts();</script>
	</binding>
      </button>
      
    </group>
    
    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      
      <checkbox>
	<label>Reheat</label> 
	<x>0</x>
	<y>0</y>
	<width>12</width>
	<height>12</height>
	<property>/autopilot/settings/allow-reheat</property>
      </checkbox>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>70</width>
	<legend>AutoThrottle</legend>
	<binding>
	  <command>property-cycle</command>
	  <property>/autopilot/locks/speed</property>
	  <value type="string">speed-with-throttle</value>
	  <value/>
	</binding>
      </button>
      
    </group>
    
    <group>
      <padding>10</padding>
      <layout>vbox</layout>
      <x>0</x>
      <y>0</y>
      
      <input>
	<property>/autopilot/settings/target-speed-mach</property>
	<live>true</live>
	<width>70</width>
	<binding>
	  <command>dialog-apply</command>
	</binding>
      </input>
      
      <button>
	<x>0</x>
	<y>0</y>
	<width>70</width>
	<legend>Mach</legend>
	<binding>
	  <command>nasal</command>
	  <script>autopilot.ATselMach();</script>
	</binding>
      </button>
      
    </group>
    
  </frame>
  
